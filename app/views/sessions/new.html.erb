<%= form_with(model: @user, url: sessions_path, method: :post, local: true) do |form| %>
<h1>Login</h1>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    login
    <%= form.submit %>
  </div>
<% end %>
